<Page x:Class="PlayerMusicale.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlayerMusicale.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage"
      Name="HP">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,2">
                <GradientStop Color="#FF353434" Offset="0"/>
                <GradientStop Color="Black" Offset="0.842"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Border Margin="10">
                        <Image Height="100" Source="/Assets/Images/home.png" Width="100"></Image>
                    </Border>
                    <Label Content="All Songs"
                           FontWeight="Black"
                           FontSize="30"
                           
                           VerticalAlignment="Center"></Label>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
